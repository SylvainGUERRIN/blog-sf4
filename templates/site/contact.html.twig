{% extends 'site/partials/base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/leaflet/1.6.0/leaflet.css"/>
{% endblock %}

{% block body %}
    <div class="header text-center">
        <h1 class="text-white">Me Contacter</h1>
    </div>
<div class="container mt-5 mb-5">
    <div class="row">
        <div class="col-sm-12 col-md-6">
            <div id="mapid"></div>
        </div>
        <div class="col-sm-12 col-md-6">
            <h1 class="text-center mb-3">Formulaire de contact</h1>
            {{ form_start(form) }}
            {{ form_row(form.name) }}
            {{ form_row(form.mail) }}
            {{ form_row(form.phone) }}
            {{ form_row(form.message) }}
            <div class="row">
                <div class="col-12 text-center">
                    <button type="submit" class="btn btn-color">Envoyer</button>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/leaflet/1.6.0/leaflet.js"></script>
    <script src="{{ asset('js/map-contact.js') }}"></script>
{% endblock %}
